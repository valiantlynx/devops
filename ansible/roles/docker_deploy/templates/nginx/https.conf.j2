events {
    worker_connections  1024;
}

http {
    server_tokens off;
    charset utf-8;

    {% for domain_detail in detailed_domain_list %}
    # Always redirect HTTP to HTTPS
    server {
        listen 80;
        server_name {{ domain_detail.domain }};
        return 301 https://$host$request_uri;
    }
    # Configuration for astromanga.com
    server {
        listen 443 ssl http2;
        server_name {{ domain_detail.domain }};

        ssl_certificate /etc/letsencrypt/live/{{ domain_detail.domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ domain_detail.domain }}/privkey.pem;

        # include /etc/letsencrypt/options-ssl-nginx.conf; # Recommended SSL settings
        # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # DH parameters

        location / {
            proxy_pass http://{{ domain_detail.service }}:{{ domain_detail.port }};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location ~ /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
    }
    {% endfor %}
}

